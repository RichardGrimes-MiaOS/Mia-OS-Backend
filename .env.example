# Application
NODE_ENV=development
PORT=4000

# Database - Amazon RDS PostgreSQL
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=mia_crm

# Database Connection Pool (Optional)
DB_CONNECTION_LIMIT=10

# CORS (Optional)
CORS_ORIGIN=http://localhost:3001

# AWS Cognito
AWS_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=your-user-pool-id
AWS_COGNITO_CLIENT_ID=your-client-id
AWS_COGNITO_AUTHORITY=https://cognito-idp.{region}.amazonaws.com/{userPoolId}

# AWS SES (Simple Email Service)
# Note: In production (ECS), these credentials are not needed - IAM role is used
# In development, provide credentials or use AWS CLI profile
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
SES_FROM_EMAIL=noreply@yourdomain.com

# AWS S3 Buckets
UPLOADS_BUCKET=